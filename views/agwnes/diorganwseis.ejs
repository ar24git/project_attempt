<!-- https://bootstrap-datepicker.readthedocs.io/en/latest/ -->
<section class="container mb-2 mt-2 border">
    
    <form class="mt-2">
            
            <div class="row form-group">
                <div class="col-lg-3">
                    <label for="date">Ημερομηνία</label>
                    <div class="input-group date" id="datepicker">
                        <input type="text" class="form-control">
                        <span class="input-group-append">
                            <span class="input-group-text">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 mt-2">
                    <label for="">Αγωνιστική</label>  
                    <input type="text">
                </div>
                <div class="col-lg-2 mt-2">
                    <label for="">Κατηγορία</label>  
                    <input type="text">
                </div>
                <div class="allign-items-end mt-3">
                    <button class="btn btn-secondary">Εκκαθάριση</button>
                    <button class="btn btn-success">Έυρεση</button>
                </div>
            </div>
    </form>
</section>


<table class="table table-striped table-responsive">
    <caption class="caption-top">${title}</caption>
    <tr><th>Αγώνας</th>
        <th>Γήπεδο</th>
        <th>Ημερομηνία</th>
        <th>'Ωρα</th>
        <th>Διαιτητής</th>
        <th>Αποτέλεσμα</th>
    <% matches.map((match)=>{ %>
    <tr><td><%= match.name %></td>
        <td><%= match.pitch %></td>
        <td><%= match.date %></td>
        <td><%= match.time %></td>
        <td><%= match.referee %></td>
        <td><%= match.result %></td></tr>
        <% }) %>
    








